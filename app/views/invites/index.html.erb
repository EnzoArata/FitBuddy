<div id="page-content">
  <h1 class="text-center">invites listing page</h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        <table id="invites-table">
          <thead>
            <tr>
              <th>invite email</th>
              <th>group</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @invites.each do |invite| %>
              <% @group = Group.find(invite.group_id)%>
              <tr>
                <td><%= invite.email %>         </td>
                <td><%= @group.title %>         </td>
                <td><%= link_to 'delete', invites_path,class: "btn btn-info"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

  <br>
</div>
