<h1 class="text-center">groups listing page</h1>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th>Bio</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.title %></td>
        <td><%= group.bio %></td>
        <td><%= link_to 'Show', group_path(group)%></td>
        <% if group.user.exists?(session[:user_id]) %>
          <% if group.user_id != session[:user_id]  %>
            <td><%= link_to 'Leave Group!', leavegroup_path(:group => { :group_id => group.id}), method: :post%></td>
          <% end %>
        <% else %>
          <td><%= link_to 'Join Group!', joingroup_path(:group => { :group_id => group.id}), method: :post%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
