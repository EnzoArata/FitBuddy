<div id="page-content">
  <h1 class="text-center"><%= @group.title %></h1>
  <h6 class="text-center fst-italic">Created by <%= @user.username%></h6>
  <br>
  <div class="container" id= "group-content">
    <div class="row align-items-start">
      <div class="col">
        <h4>Bio:</h4>
        <%= @group.bio %>
      </div>

      <div class="col">
        <h4>Members:</h4>
        <table>
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%if @group.users != nil %>
              <% @group.users.each do |user| %>
                <tr>

                  <td><%= user.username %></td>
                  <td><%= link_to 'show', user_path(user),class: "btn btn-info"%></td>
                  <%if @group.user_id == session[:user_id] && user.id != session[:user_id]%>
                    <td><%= link_to 'kick', user_path(user),class: "btn btn-danger"%></td>
                  <% end %>

                </tr>
              <% end %>
            <% end %>

          </tbody>
        </table>
        <br>
        <%if @group.user_id == session[:user_id] %>
          <h6><%= link_to 'Invite new members!', new_invite_path(:group => {:group_id =>@group.id}),class: "btn btn-warning" %></h6>
        <% end %>
      </div>
    </div>
    <div class="row">
      <br><br>
      <div class="col-12 text-center">
        <h4>Current workout</h4>
        <br>
        <table class ="center">
          <thead>
            <tr>
              <th>Workout</th>
              <th>Rep Scheme</th>
              <th>Rest time</th>
            </tr>
          </thead>

          <tbody>
                <tr>

                  <td>Bench Press</td>
                  <td>8-10</td>
                  <td>2-4 minutes</td>

                </tr>
                <tr>

                  <td>Lat Raises</td>
                  <td>15-25</td>
                  <td>1-3 minutes</td>

                </tr>
                <tr>

                  <td>Incline Bench Press</td>
                  <td>10-15</td>
                  <td>2-4 minutes</td>

                </tr>
                <tr>

                  <td>Face Pulls</td>
                  <td>15-25</td>
                  <td>1-3 minutes</td>

                </tr>
          </tbody>
        </table>
        <br><br><br><br>
        <%if logged_in? && current_user.id == session[:user_id] %>
          <%= link_to "Edit Group", @group, class: "btn btn-danger" %>
        <% end %>
        <br><br>
      </div>
    </div>
  </div>

</div>
